
---
import BaseLayout from '@/layouts/BaseLayout.astro'
import AdminHeader from '@/components/common/AdminHeader.tsx'
import AppSidebarLayout from '@/components/common/AppSidebarLayout.tsx'
import AdminFooter from '@/components/common/AdminFooter.tsx'
import ProfileCard from '@/components/profil-admin/ProfileCard.tsx'
import ProfileActions from '@/components/profil-admin/ProfileActions.tsx'
import ProtectedDashboard from '@/components/auth/ProtectedDashboard.tsx'
---

<BaseLayout title="Profil Admin - SIM4LON">
  <ProtectedDashboard client:load>
    <AdminHeader client:load />
    <AppSidebarLayout client:load headerHeight="64px">
      <main class="flex-1 flex flex-col">
        <div class="flex-1 overflow-auto">
          <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
            {/* Page Header */}
            <div class="mb-8 animate-fadeInDown">
              <h1 class="text-3xl font-bold text-foreground">Profil Admin</h1>
              <p class="text-muted-foreground mt-2">Kelola informasi profil dan keamanan akun Anda</p>
            </div>

            {/* Profile Content */}
            <div class="grid gap-8 lg:grid-cols-3">
              {/* Main Profile Card */}
              <div class="lg:col-span-2 animate-fadeInUp">
                <ProfileCard client:idle />
              </div>

              {/* Actions Sidebar */}
              <div class="animate-fadeInUp" style="animation-delay: 0.2s">
                <ProfileActions client:idle />
              </div>
            </div>
          </div>
        </div>

        {/* Footer */}
        <AdminFooter />
      </main>
    </AppSidebarLayout>
  </ProtectedDashboard>
</BaseLayout>

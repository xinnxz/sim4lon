---
import BaseLayout from '@/layouts/BaseLayout.astro'
import PangkalanSidebarLayout from '@/components/pangkalan/PangkalanSidebarLayout.tsx'
import AdminFooter from '@/components/common/AdminFooter.tsx'
import RiwayatPenjualanPage from '@/components/pangkalan/RiwayatPenjualanPage.tsx'
import ProtectedDashboard from '@/components/auth/ProtectedDashboard.tsx'
---

<BaseLayout title="Riwayat Penjualan - SIM4LON Pangkalan">
  <ProtectedDashboard client:load allowedRoles={['PANGKALAN']}>
    <PangkalanSidebarLayout client:load headerHeight="64px">
      <main class="flex-1 flex flex-col">
        <RiwayatPenjualanPage client:idle />
        <AdminFooter />
      </main>
    </PangkalanSidebarLayout>
  </ProtectedDashboard>
</BaseLayout>

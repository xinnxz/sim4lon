---
import BaseLayout from '@/layouts/BaseLayout.astro'
import AdminHeader from '@/components/common/AdminHeader.tsx'
import AppSidebarLayout from '@/components/common/AppSidebarLayout.tsx'
import AdminFooter from '@/components/common/AdminFooter.tsx'
import PenerimaanPage from '@/components/penerimaan/PenerimaanPage.tsx'
import ProtectedDashboard from '@/components/auth/ProtectedDashboard.tsx'
---

<BaseLayout title="Penerimaan - SIM4LON">
  <ProtectedDashboard client:load allowedRoles={['ADMIN']}>
    <AdminHeader client:load />
    <AppSidebarLayout client:load headerHeight="64px">
      <main class="flex-1 flex flex-col dashboard-gradient-bg">
        <div class="flex-1 overflow-auto">
          <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
            {/* Page Header */}
            <div class="mb-6 flex items-center gap-3">
              <div class="h-12 w-1.5 rounded-full bg-gradient-to-b from-purple-500 via-purple-400 to-violet-400"></div>
              <div>
                <h1 class="text-3xl font-bold text-gradient-primary">Penerimaan</h1>
                <p class="text-muted-foreground/80 mt-1">Rekapitulasi penerimaan stok dari SPBE</p>
              </div>
            </div>

            {/* Content */}
            <div class="animate-fadeInUp">
              <PenerimaanPage client:load />
            </div>
          </div>
        </div>
        <AdminFooter />
      </main>
    </AppSidebarLayout>
  </ProtectedDashboard>
</BaseLayout>
